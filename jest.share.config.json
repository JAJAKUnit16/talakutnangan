{
	"preset": "ts-jest",

	"cacheDirectory": "t/cache/unit_share",

	"moduleFileExtensions": [
		"js",
		"ts"
	],

	"moduleNameMapper": {
		"~/(.*)": "<rootDir>/t/helpers/$1",
		"\\$/(.*)": "<rootDir>/shareable/$1",
		"\\$!/(.*)": "<rootDir>/common_back-end/$1",
		"%/(.*)": "<rootDir>/database/$1"
	},

	"setupFilesAfterEnv": [
		"./t/helpers/set-ups/log.setup.ts"
	],

	"transformIgnorePatterns": [],

	"testRegex": [
		"./shareable/.*\\.spec\\.ts"
	],

	"testEnvironment": "node"
}
