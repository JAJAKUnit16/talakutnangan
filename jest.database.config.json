{
	"preset": "ts-jest",

	"cacheDirectory": "t/cache/unit_database",

	"moduleFileExtensions": [
		"js",
		"ts"
	],

	"moduleNameMapper": {
		"\\$/(.*)": "<rootDir>/shareable/$1",
		"\\$!/(.*)": "<rootDir>/common_back-end/$1",
		"%/(.*)": "<rootDir>/database/$1",
		"~/(.*)": "<rootDir>/t/helpers/$1"
	},

	"setupFilesAfterEnv": [
		"./t/helpers/set-ups/log.setup.ts",
		"./t/helpers/set-ups/cache_manager.setup.ts",
		"./t/helpers/set-ups/database.setup.ts"
	],

	"transformIgnorePatterns": [],

	"testRegex": [
		"./database/.*\\.spec\\.ts"
	],

	"testEnvironment": "node"
}
