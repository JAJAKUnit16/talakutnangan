{
	"compilerOptions": {
		"strict": false,
		"module": "ES2020",
		"moduleResolution": "Node",
		"allowJs": true,
		"target": "ES2017",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"paths": {
			"!/*": ["./server/*"],
			"#/*": ["./renderer/*"],
			"@/*": ["./pages/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS"
		},
		"require": ["tsconfig-paths/register"]
	}
}
