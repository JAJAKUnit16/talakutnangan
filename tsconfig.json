{
	"compilerOptions": {
		"strict": true,
		"module": "ES2020",
		"moduleResolution": "Node",
		"allowJs": true,
		"target": "ES2017",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client", "jest"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"paths": {
			"%/*": [ "./database/*" ],
			"!/*": [ "./server/*" ],
			"$!/*": [ "./common_back-end/*" ],
			"~/*": [ "./t/helpers/*" ],
			"#/*": [ "./renderer/*" ],
			"@/*": [ "./components/*" ],
			"$/*": [ "./shareable/*" ],
			"@@/*": [ "./pages/*" ],
			"@assets/*": ["./assets/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"emitDecoratorMetadata": true,
			"experimentalDecorators": true,
			"module": "CommonJS"
		},
		"require": [
			"tsconfig-paths/register"
		]
	}
}
