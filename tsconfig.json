{
	"compilerOptions": {
		"strict": true,
		"module": "ES2020",
		"moduleResolution": "Node",
		"target": "ES2017",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"paths": {
			"!/*": [ "./server/*" ],
			"#/*": [ "./renderer/*" ],
			"@/*": [ "./pages/*" ]
		}
	},
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS"
		},
		"require": [
			"tsconfig-paths/register"
		]
	}
}
