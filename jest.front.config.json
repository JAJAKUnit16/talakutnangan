{
	"preset": "ts-jest",

	"moduleFileExtensions": [
		"js",
		"ts",
		"vue"
	],

	"moduleNameMapper": {
		"~/(.*)": "<rootDir>/t/helpers/$1",
		"!/(.*)": "<rootDir>/server/$1",
		"#/(.*)": "<rootDir>/renderer/$1",
		"@/(.*)": "<rootDir>/components/$1",
		"\\$/(.*)": "<rootDir>/shareable/$1"
	},

	"transform": {
		"^.+\\.vue": "vue-jest"
	},

	"transformIgnorePatterns": [],

	"testRegex": [
		"components/.*\\.spec\\.ts",
		"pages/.*\\.spec\\.ts"
	],

	"testEnvironment": "jsdom"
}
