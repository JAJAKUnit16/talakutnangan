{
	"preset": "ts-jest",

	"moduleFileExtensions": [
		"js",
		"ts"
	],

	"moduleNameMapper": {
		"~/(.*)": "<rootDir>/t/helpers/$1",
		"\\$/(.*)": "<rootDir>/shareable/$1",
		"\\$@/(.*)": "<rootDir>/common_front-end/$1"
	},

	"setupFilesAfterEnv": [
		"./t/helpers/set-ups/fetch.set_up.ts"
	],

	"transformIgnorePatterns": [],

	"testRegex": [
		"common_front-end/.*\\.spec\\.ts"
	],

	"testEnvironment": "node"
}
