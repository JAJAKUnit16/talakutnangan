{
	"preset": "ts-jest",

	"moduleFileExtensions": [
		"js",
		"ts",
		"vue"
	],

	"moduleNameMapper": {
		"!/(.*)": "<rootDir>/server/$1",
		"~/(.*)": "<rootDir>/t/unit/$1",
		"#/(.*)": "<rootDir>/renderer/$1",
		"@/(.*)": "<rootDir>/pages/$1"
	},

	"setupFilesAfterEnv": [
		"./t/unit/set_up.ts"
	],

	"transform": {
		"^.+\\.vue": "vue-jest"
	},

	"transformIgnorePatterns": [],

	"testRegex": [
		"pages/.*\\.spec\\.ts",
		"server/.*\\.spec\\.ts"
	],

	"testEnvironment": "jsdom"
}
