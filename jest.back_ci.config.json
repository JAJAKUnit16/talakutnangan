{
	"preset": "ts-jest",

	"moduleFileExtensions": [
		"js",
		"ts"
	],

	"moduleNameMapper": {
		"\\$/(.*)": "<rootDir>/shareable/$1",
		"\\$!/(.*)": "<rootDir>/common_back-end/$1",
		"%/(.*)": "<rootDir>/database/$1",
		"!/(.*)": "<rootDir>/server/$1",
		"~/(.*)": "<rootDir>/t/helpers/$1",
		"#/(.*)": "<rootDir>/renderer/$1"
	},

	"setupFilesAfterEnv": [],

	"transformIgnorePatterns": [],

	"testRegex": [
		"common_back-end/.*\\.spec\\.ts",
		"./database/.*\\.spec\\.ts",
		"./server/.*\\.spec\\.ts"
	],

	"testEnvironment": "node"
}
