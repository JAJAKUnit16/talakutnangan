{
	"preset": "ts-jest",

	"moduleFileExtensions": [
		"js",
		"ts"
	],

	"moduleNameMapper": {
		"%/(.*)": "<rootDir>/database/$1",
		"!/(.*)": "<rootDir>/server/$1",
		"~/(.*)": "<rootDir>/t/helpers/$1",
		"#/(.*)": "<rootDir>/renderer/$1"
	},

	"setupFilesAfterEnv": [
		"./t/helpers/singletons.set_up.ts",
		"./t/helpers/database.set_up.ts"
	],

	"transformIgnorePatterns": [],

	"testRegex": [
		"database/.*\\.spec\\.ts",
		"server/.*\\.spec\\.ts"
	],

	"testEnvironment": "node"
}
