{
	"preset": "ts-jest",

	"cacheDirectory": "t/cache/unit_back",

	"moduleFileExtensions": [
		"js",
		"ts"
	],

	"moduleNameMapper": {
		"\\$/(.*)": "<rootDir>/shareable/$1",
		"\\$!/(.*)": "<rootDir>/common_back-end/$1",
		"~/(.*)": "<rootDir>/t/helpers/$1"
	},

	"setupFilesAfterEnv": [
		"./t/helpers/set-ups/log.set_up.ts",
		"./t/helpers/set-ups/cache_manager.set_up.ts"
	],

	"transformIgnorePatterns": [],

	"testRegex": [
		"common_back-end/.*\\.spec\\.ts"
	],

	"testEnvironment": "node"
}
