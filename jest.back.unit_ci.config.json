{
	"preset": "ts-jest",

	"extensionsToTreatAsEsm": [".ts"],

	"globals": {
	  "ts-jest": {
		 "useESM": true
	  }
	},

	"moduleFileExtensions": [
		"js",
		"ts",
		"node"
	],

	"moduleNameMapper": {
		"\\$/(.*)": "<rootDir>/shareable/$1",
		"\\$!/(.*)": "<rootDir>/common_back-end/$1",
		"%/(.*)": "<rootDir>/database/$1",
		"!/(.*)": "<rootDir>/server/$1",
		"~/(.*)": "<rootDir>/t/helpers/$1",
		"#/(.*)": "<rootDir>/renderer/$1"
	},

	"setupFilesAfterEnv": [
		"./t/helpers/set-ups/log.setup.ts",
		"./t/helpers/set-ups/singletons.setup.ts",
		"./t/helpers/set-ups/cache_manager.setup.ts"
	],

	"transformIgnorePatterns": [],

	"testRegex": [
		"common_back-end/.*\\.spec\\.ts",
		"server/.*\\.spec\\.ts"
	],

	"testEnvironment": "node"
}
